<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
        <servlet>
		  <servlet-name>bill</servlet-name>
		  <servlet-class>com.customer.CustomerList</servlet-class>
	    </servlet>
	    <servlet-mapping>
		  <servlet-name>bill</servlet-name>
		  <url-pattern>/bill</url-pattern>
	    </servlet-mapping>
	    
	    <servlet>
		  <servlet-name>updatecustomer</servlet-name>
		  <servlet-class>com.customer.UpdateCustomerServlet</servlet-class>
	    </servlet>
	    <servlet-mapping>
		  <servlet-name>updatecustomer</servlet-name>
		  <url-pattern>/update</url-pattern>
	    </servlet-mapping>
	
	    <servlet>
		   <servlet-name>deletecustomer</servlet-name>
		   <servlet-class>com.customer.DeleteCustomerServlet</servlet-class>
	    </servlet>
	    <servlet-mapping>
		   <servlet-name>deletecustomer</servlet-name>
		   <url-pattern>/delete</url-pattern>
	    </servlet-mapping>
	
	       <servlet>
		   <servlet-name>insertunits</servlet-name>
		   <servlet-class>com.units.UnitsInsertServlet</servlet-class>
	    </servlet>
	    <servlet-mapping>
		   <servlet-name>insertunits</servlet-name>
		   <url-pattern>/insert</url-pattern>
	    </servlet-mapping>
	    
	     <servlet>
		   <servlet-name>unit</servlet-name>
		   <servlet-class>com.units.UnitListServlet</servlet-class>
	    </servlet>
	    <servlet-mapping>
		   <servlet-name>unit</servlet-name>
		   <url-pattern>/unit</url-pattern>
	    </servlet-mapping>
	  
	  
         
    
        
</web-app>